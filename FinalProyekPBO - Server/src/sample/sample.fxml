<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="ap_main" fx:controller="sample.Controller"
            prefHeight="400" prefWidth="480"
            xmlns:fx="http://javafx.com/fxml">
    <children>
        <Button fx:id="button_send" layoutX="400" layoutY="340" text="Send"/>
        <TextField fx:id="tf_message" layoutX="30" layoutY="340"
                   prefWidth="360" prefHeight="25"/>
        <ScrollPane fx:id="sp_main" layoutY="70" layoutX="30"
                    prefHeight="256" prefWidth="420" fitToWidth="true">
            <content>
                <VBox fx:id="vbox_messages" prefHeight="250"
                      prefWidth="410"/>
            </content>
        </ScrollPane>
        <Label layoutX="114" layoutY="25"
               text="61 Messenger">
            <font>
                <Font name="Arial" size="22"></Font>
            </font>
        </Label>
    </children>
</AnchorPane>